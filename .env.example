# ============================================================
# RehabOS Environment Configuration
# Copy to .env and fill in your values
# ============================================================

# --- Local LLM (DGX Spark) ---
# OpenAI-compatible endpoint for local LLM
LOCAL_LLM_BASE_URL=http://localhost:8000/v1
# Model name served by the local LLM endpoint
LOCAL_LLM_MODEL=meta-llama/Llama-3.1-70B-Instruct
# Timeout in seconds for local LLM requests
LOCAL_LLM_TIMEOUT=60
# Use local LLM as primary (set false to always use Claude)
LOCAL_LLM_ENABLED=true

# --- Anthropic Claude (fallback) ---
# Get your key at https://console.anthropic.com
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# --- PubMed API ---
# Get a free key at https://www.ncbi.nlm.nih.gov/account/settings/
PUBMED_API_KEY=
# Required by NCBI terms of service
PUBMED_EMAIL=

# --- Qwen3-TTS Voice Server (DGX Spark) ---
# URL for the TTS server
TTS_SERVER_URL=http://192.168.68.123:8080
# Enable/disable voice synthesis
TTS_ENABLED=true

# --- Vector Store ---
# Directory for ChromaDB persistence (relative or absolute)
CHROMA_PERSIST_DIR=./data/chroma

# --- API Settings ---
API_HOST=0.0.0.0
API_PORT=8080
# API key for authenticating requests (leave blank to disable)
API_KEY=

# --- Logging ---
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- Agent Settings ---
# Max retries for LLM calls
MAX_RETRIES=3
# Number of evidence items to retrieve from vector store
EVIDENCE_TOP_K=5
